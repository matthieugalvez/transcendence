generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./transcendence.db"
}

model User {
  id            Int      @id @default(autoincrement())
  email          String   @unique
  displayName   String?
  password_hash String
  provider      String   @default("local") // "local" or "google"
  refreshToken  String?
  twoFAEnabled  Boolean  @default(false)
  twoFASecret   String?
  avatar		String	@default("/avatars/default.png")
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // Relations
  player1_sessions GameSession[] @relation("Player1Sessions")
  player2_sessions GameSession[] @relation("Player2Sessions")

  @@map("users")
}


model GameSession {
  id            Int      @id @default(autoincrement())
  player1_id    Int
  player2_id    Int
  player1_score Int
  player2_score Int
  winner_id     Int?
  created_at    DateTime @default(now())
  status        String   @default("completed")

  // Relations
  player1 User @relation("Player1Sessions", fields: [player1_id], references: [id])
  player2 User @relation("Player2Sessions", fields: [player2_id], references: [id])

  @@map("game_sessions")
}