generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./transcendence.db"
}

model User {
  id            String   @id @default(uuid()) // Changed from Int to String with UUID
  email         String   @unique
  displayName   String?
  password_hash String
  provider      String   @default("local")
  refreshToken  String?
  twoFAEnabled  Boolean  @default(false)
  twoFASecret   String?
  avatar        String   @default("/avatars/default.svg")
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // Relations - update foreign keys to String
  player1_sessions GameSession[] @relation("Player1Sessions")
  player2_sessions GameSession[] @relation("Player2Sessions")

  @@map("users")
}

model GameSession {
  id            String   @id @default(uuid()) // Changed from Int to String with UUID
  player1_id    String   // Changed from Int to String
  player2_id    String   // Changed from Int to String
  player1_score Int
  player2_score Int
  winner_id     String?  // Changed from Int? to String?
  created_at    DateTime @default(now())
  status        String   @default("completed")

  // Relations - update to use String IDs
  player1 User @relation("Player1Sessions", fields: [player1_id], references: [id])
  player2 User @relation("Player2Sessions", fields: [player2_id], references: [id])

  @@map("game_sessions")
}