  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": "./server",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server/**/*"]
}