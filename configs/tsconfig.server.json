{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist-back",
    "rootDir": "../src/server",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["../src/server/**/*"],
  "exclude": ["../node_modules", "../dist", "../dist-back"]
}