{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "../dist-back",
    "rootDir": "../src/server",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "sourceMap": true,
    "strictPropertyInitialization": false
  },
  "include": ["../src/server/**/*"],
  "exclude": ["../src/client", "../node_modules"]
}