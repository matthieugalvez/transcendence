{
	"name": "transcendence",
	"version": "1.0.0",
	"description": "A pong game using TypeScript, Tailwind , Node.js, SQLite and Fastify",
	"main": "index.js",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/erdelp/transcendence.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/erdelp/transcendence/issues"
	},
	"homepage": "https://github.com/erdelp/transcendence#readme",
	"dependencies": {
		"@fastify/cookie": "11.0.2",
		"@fastify/cors": "11.0.1",
		"@fastify/helmet": "^13.0.1",
		"@fastify/jwt": "9.1.0",
		"@fastify/multipart": "9.0.3",
		"@fastify/oauth2": "8.1.2",
		"@fastify/static": "8.2.0",
		"@fastify/websocket": "^11.2.0",
		"@prisma/client": "6.9.0",
		"@sgratzl/chartjs-chart-boxplot": "^4.4.4",
		"@types/bcrypt": "5.0.2",
		"@types/ws": "8.18.1",
		"bcrypt": "6.0.0",
		"chart.js": "^4.5.0",
		"chartjs-adapter-date-fns": "^3.0.0",
		"chartjs-chart-matrix": "^3.0.0",
		"date-fns": "^4.1.0",
		"fastify": "5.3.3",
		"jsonwebtoken": "9.0.2",
		"qrcode": "1.5.4",
		"speakeasy": "2.0.0",
		"sqlite3": "5.1.7",
		"uuid": "^11.1.0",
		"zod": "3.25.51"
	},
	"devDependencies": {
		"@tailwindcss/vite": "4.1.8",
		"@types/jsonwebtoken": "9.0.9",
		"@types/node": "22.15.29",
		"@types/qrcode": "^1.5.5",
		"@types/speakeasy": "^2.0.10",
		"@types/uuid": "10.0.0",
		"@types/ws": "^8.18.1",
		"concurrently": "9.1.2",
		"prisma": "6.9.0",
		"tailwindcss": "4.1.8",
		"tsx": "4.19.4",
		"typescript": "5.8.3",
		"vite": "6.3.5"
	},
	"scripts": {
		"dev": "vite --config ./configs/vite.config.ts",
		"build": "vite --config ./configs/vite.config.ts build",
		"preview": "vite preview",
		"build:frontend": "vite build --config ./configs/vite.config.ts",
		"build:backend": "tsc --project ./configs/tsconfig.server.json",
		"build:full": "npm run build:frontend && npm run build:backend",
		"server:start": "node dist-back/app.js",
		"dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:frontend": "vite --config ./configs/vite.config.ts",
		"dev:backend": "tsx watch src/server/app.ts",
		"db:seed": "tsx prisma/seed.ts",
		"generate:jwt": "node -e \"console.log('AUTH_SECRET=' + require('crypto').randomBytes(32).toString('hex')); console.log('AUTH_REFRESH_SECRET=' + require('crypto').randomBytes(32).toString('hex'));\"",
		"server:dev": "npx prisma generate && tsx watch src/server/app.ts",
		"server:build": "npx prisma generate && npx tsc --project ./configs/tsconfig.server.json",
		"db:migrate": "npx prisma migrate dev",
		"db:studio": "npx prisma studio",
		"db:generate": "npx prisma generate",
		"db:reset": "npx prisma migrate reset",
		"clean": "rm -rf node_modules package-lock.json",
		"fresh-install": "npm run clean && npm install",
		"audit:fix": "npm audit fix --force"
	},
	"overrides": {
		"glob": "^10.3.10",
		"rimraf": "^5.0.5",
		"node-gyp": "^11.2.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
